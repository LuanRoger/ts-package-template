{
  "name": "@luanroger/ts-package-template",
  "description": "A TypeScript package template",
  "version": "1.0.3",
  "private": false,
  "type": "module",
  "author": "Luan Roger <luan.roger.2003@gmail.com> (https://github.com/LuanRoger)",
  "license": "MIT",
  "homepage": "https://github.com/LuanRoger/ts-package-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/LuanRoger/ts-package-template.git"
  },
  "keywords": [
    "typescript",
    "template",
    "package",
    "rolldown",
    "vitest",
    "biome",
    "tsdown"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsdown --watch ./src",
    "build": "tsc && tsdown",
    "check": "biome check",
    "check:write": "biome check --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "changelog": "git-cliff --config ./scripts/git-cliff.toml --output CHANGELOG.md",
    "publish": "np",
    "publish:all": "npm run build && npm run publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "git-cliff": "^2.12.0",
    "np": "^11.0.2",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
