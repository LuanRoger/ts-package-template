{
  "name": "@luanroger/ts-package-template",
  "description": "A TypeScript package template",
  "version": "1.0.1",
  "private": false,
  "type": "module",
  "author": "Luan Roger <luan.roger.2003@gmail.com> (https://github.com/LuanRoger)",
  "license": "MIT",
  "homepage": "https://github.com/LuanRoger/ts-package-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/LuanRoger/ts-package-template.git"
  },
  "keywords": [
    "typescript",
    "template",
    "package",
    "rolldown"
  ],
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && tsdown",
    "check": "biome check",
    "check:write": "biome check --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "changelog": "git-cliff --config ./scripts/git-cliff.toml --output CHANGELOG.md",
    "release": "np",
    "release:all": "npm run build && npm run release"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "git-cliff": "^2.10.1",
    "np": "^10.2.0",
    "tsdown": "^0.15.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
